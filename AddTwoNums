# Definition for singly-linked list.
# class ListNode:
#     def __init__(self, val=0, next=None):
#         self.val = val
#         self.next = next
class ListNode:
     def __init__(self, val=0, next=None):
         self.val = val
         self.next = next

class Solution:
    def addTwoNumbers(self, l1: ListNode, l2: ListNode, carry = 0):
        val = l1.val + l2.val + carry
        carry = val // 10
        val_node = ListNode(val % 10)
        
        if (l1.next != None or l2.next != None or carry != 0):
            if l1.next == None:
                l1.next == ListNode(0)
            if l2.next == None:
                l2.next == ListNode(0)
            val_node.next = self.addTwoNumbers(l1.next, l2.next, carry)
        return val_node
            
